<UserControl x:Class="IrcSays.Settings.NetworkSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:config="clr-namespace:IrcSays.Configuration"
             xmlns:local="clr-namespace:IrcSays.Application"
             xmlns:models="clr-namespace:IrcSays.Preferences.Models"
             d:DataContext="{d:DesignInstance Type=models:NetworkPreferences}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="384">
	<Canvas>
		<CheckBox Canvas.Left="12" Canvas.Top="12" Content="Use SOCKS5 Proxy" Height="16" IsChecked="{Binding UseSocks5Proxy}" Name="chkUseSocks5Proxy" ToolTip="Use a SOCKS5 proxy server to make outgoing connections." />
		<TextBox Canvas.Left="11" Canvas.Top="54" Height="23" Name="txtProxyHostname" Width="159" ToolTip="The hostname or IP address of your proxy server."
				 Text="{Binding ProxyHostname, Mode=TwoWay}"
				 IsEnabled="{Binding UseSocks5Proxy}"/>
		<TextBox Canvas.Left="193" Canvas.Top="54" Height="23" Name="textBox1" ToolTip="The port that your proxy listens on." Width="54"
				 IsEnabled="{Binding UseSocks5Proxy}">
			<Binding Mode="TwoWay" Path="ProxyPort">
				<Binding.ValidationRules>
					<ExceptionValidationRule />
				</Binding.ValidationRules>
			</Binding>
		</TextBox>
		<TextBlock Canvas.Left="10" Canvas.Top="34" Height="23" Name="textBlock1" Text="Proxy Server:" Width="116" />
		<Label Canvas.Left="176" Canvas.Top="54" Content=":" Height="23" Name="label3" Width="19" />
		<TextBox Canvas.Left="10" Canvas.Top="104" Height="23" Name="txtUsername" Width="116" IsEnabled="{Binding UseSocks5Proxy}"
				 Text="{Binding ProxyUsername}"/>
		<TextBox Canvas.Left="131" Canvas.Top="104" Height="23" Name="txtPassword" Width="116" IsEnabled="{Binding UseSocks5Proxy}"
				 Text="{Binding ProxyPassword}"/>
		<TextBlock Canvas.Left="11" Canvas.Top="84" Height="23" Name="textBlock2" Text="Username" Width="116" />
		<TextBlock Canvas.Left="131" Canvas.Top="84" Height="23" Name="textBlock3" Text="Password" Width="116" />
		<CheckBox Canvas.Left="10" Canvas.Top="240" Content="Enable UPnP (forwarding)" Height="16" IsChecked="{Binding EnableUPnP}" Name="checkBox3" ToolTip="Attempt to automatically forward ports if there is a UPnP-enabled gateway on the local network." />
		<CheckBox Canvas.Left="10" Canvas.Top="262" Content="Discover external IP" Height="16" IsChecked="{Binding DiscoverExternalIp}" Name="checkBox2" ToolTip="Automatically discover external IP address by querying the IRC server on connect. You will need to reconnect for the change to take effect." />
	</Canvas>
</UserControl>
